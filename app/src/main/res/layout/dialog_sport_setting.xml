<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/half_rounded_view"

    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 운동 목표 설정" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/date_btn"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="5dp"
                android:backgroundTint="#8180D8"
                android:background="@drawable/calender_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/date_txt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
              
                android:textSize="20dp"
                android:text="날짜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8180D8"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_btn"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="5dp"
                android:backgroundTint="#8180D8"
                android:background="@drawable/time_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/time_txt"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:text="시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8180D8"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_btn"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="5dp"
                android:backgroundTint="#8180D8"
                android:background="@drawable/map_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/map_txt"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:text="장소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8180D8"/>


        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:clickable="true"
        android:id="@+id/complete_btnL"
        android:background="@drawable/complete_btn"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp">

        <TextView
            android:gravity="center"
            android:text="선택 완료"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>